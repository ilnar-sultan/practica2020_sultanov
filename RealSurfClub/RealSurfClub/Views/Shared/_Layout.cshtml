<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top serfheedding ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index", "Feed")'><img class="logo-style logo" src='@Url.Content("~/Content/Images/logo.png")' /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">

                    @if (Session["UserId"] != null)
                    {
                        //показываем пользователю
                        <li>
                            @{
                                var photo = Session["Photo"];
                                if (photo != null)
                                {
                                    <img src=@Url.Content(photo.ToString()) class="avatar" />
                                }
                            }

                            @Session["Nickname"]

                            <a href="@Url.Action("Logout", "Home")" style="display: inline-block; padding: 0;"><img class="exit_btn" src='@Url.Content("~/Content/Images/exit.png")' /></a>
                        </li>
                    }
                    else
                    {
                        <li> @Html.ActionLink("Войти", "Index", "Home") </li>
                        <li> @Html.ActionLink("Регистрация", "Index", "Register") </li>
                    }

                </ul>   
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
